@page "/app/search"
@page "/app"

<h3>Search guitars</h3>


<div class="text-center bg-blue-100">
    <input class="border-4 w-1/3 rounded m-6 p-6 h-8
               border-blue-300" @bind-value="SearchText"
           @bind-value:event="oninput" placeholder="Search by guitar name" @onkeyup="Search" />
</div>


@if (!FilteredGuitars.Any())
{
    <p>Nothing to show, sorry...</p>
    @if (SearchText.Length < 2)
    {
        <p>Make sure to enter at least 2 characters to search!</p>
    }
}
else
{
    <div class="p-2 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3">
        @foreach (var guitar in FilteredGuitars)
        {
            <GuitarCard Guitar=@guitar></GuitarCard>
        }
    </div>
}

